@model todo.Models.Todo

<div class="card form-card">
    <form asp-action="Create">
        <div class="mb-3 text-start">
            <label for="title" class="form-label">Title</label>
            <input asp-for="Title" type="text" class="form-control" id="title" aria-describedby="titleHelp" required>
        </div>
        <div class="mb-3 text-start">
            <label for="description" class="form-label">Description</label>
            <input asp-for="Description" type="text" class="form-control" id="description"
                aria-describedby="decriptionHelp">
            @* <input asp-for="@todoObject.Description" type="text" class="form-control" id="description"
            aria-describedby="decriptionHelp"> *@
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>